<% if (session.authenticated) { %>
<%- partial ('../partials/navbar_loggedin.ejs') %>
<% } else { %>
<%- partial ('../partials/navbar_loggedout.ejs') %>
<% } %>
<br /><br />

<div class="formwrapper">
  <h2>Find Cool People to Inspiral with!</h2>
<a href="/group/new/" class="btn btn-lg btn-primary btn-block">Register a new group</a>
</div>
<div id="inspiration-feed">
<% for (var i in groups) {%>
  <div class="group-index">
    <div class="group-gravatar" style="background-image: url(<%= groups[i].image_url %>); background-size: 250px; background-repeat: no-repeat;"></div>
    <div class="group-content">
      <h3><a href="/group/show/<%= groups[i].id %>"><%= groups[i].org %></a></h3>
      <h5><%= groups[i].city %></h5>
      <% var groupDesc = groups[i].description.split(".") %>
      <h4><%= groupDesc.splice(0,1) %>.</h4>
      <%= groupDesc.join(".") %>
    </div>
  </div>

<% } %>

