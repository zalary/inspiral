<% if (session.authenticated) { %>
<%- partial ('../partials/navbar_loggedin.ejs') %>
<% } else { %>
<%- partial ('../partials/navbar_loggedout.ejs') %>
<% } %>

    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container" id="homepage-row-2">

      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-xs-4">
          <h3 class="homepage-row-2-text">Inspire</h3>
            <p class="homepage-para">Add acts of kindness you want to do and have done, and inspire others to add these acts of kindness to their lists. Inspiral is a community dedicated to growing the collective kindness.</p>
        </div><!-- /.col-xs-4 -->
        <div class="col-xs-4">
          <h3 class="homepage-row-2-text">Discover</h3>
            <p class="homepage-para">Random acts of kindness are contagious. Check out the inspiration feed to be inspired by the acts of kindness that other users are doing, and add them to your own list to do.</p>
        </div><!-- /.col-xs-4 -->
        <div class="col-xs-4">
          <h3 class="homepage-row-2-text">Share</h3>
          <p class="homepage-para">Kindness starts with one act, and spirals out from there. Inspire your friends to join you in acts of kindness by tweeting and emailing out your favorite inspirations.</p>
        </div><!-- /.col-xs-4 -->
      </div><!-- /.row -->


      <!-- START THE FEATURETTES -->

      <hr class="featurette-divider">

      <div class="row">
        <div class="col-xs-12">
          <h3>Top Repins</h3>
          <ul class="list-group top-repins">
          </ul>
        </div>
      </div>

      <hr class="featurette-divider">

      <canvas id="homepageCanvas-2">
      </canvas>

      <hr class="featurette-divider">

      <div class="row">
        <div class="col-xs-12">
          <h3>Most Recent</h3>
          <ul class="list-group most-recent-inspirations">
          </ul>
        </div>
      </div>

      <hr class="featurette-divider">

      <div class="row featurette">
        <a name="signinup">
        <div class="col-xs-12" id="start-inspiring">
          <h2 class="featurette-heading">Start inspiring now</h2>
          <iframe src="/user/new" scrolling="no" frameborder="0"></iframe>
        </div>
      </div>

      <hr class="featurette-divider">

      <!-- /END THE FEATURETTES -->


      <!-- FOOTER -->
      <footer>
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; 2014 Adam, Kathryn & Zalary &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
      </footer>

    </div><!-- /.container -->


    <!--  PAGE SPECIFIC JS -->
<script>
  $(document).ready(function() {
    //Grabs most popular inspirations for top repins section
    $.get("/inspiration/mostPopular", function(data) {
       for (var i in data.suggestions) {
         $('.top-repins').append('<li class="list-group-item">' + data.suggestions[i].text + '<span class="badge">' + data.suggestions[i].repin_count + '</span></li>');
       }
     });

    //Grabs most recent inspirations
     $.get("/inspiration/mostRecent", function(data) {
       for (var i in data.mostRecentInspirations) {
         $('.most-recent-inspirations').append('<li class="list-group-item recent-inspirations-list">' + data.mostRecentInspirations[i].text + '<span id="recent-inspirations">' + ' added by ' + '<a href="/user/show/' + data.mostRecentInspirations[i].user_id + '" id="added-by-homepage">' + data.mostRecentInspirations[i].user_username + '</a></span></li>');
       }
     });
  });
</script>

